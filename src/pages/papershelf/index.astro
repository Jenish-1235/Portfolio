---
import Layout from '../../layouts/Layout.astro';
import { getPapers } from '../../lib/notion';
import site from '../../data/site.json';

const papers = await getPapers();
const { title, description, emptyMessage } = site.pages.papershelf;
---

<Layout title={title} description={description}>
  <section class="section">
    <h1>{title}</h1>
    <p>{description}</p>
    <hr />
    {papers.length > 0 ? (
      <div class="posts-list">
        {papers.map((paper) => (
          <div class="card">
            <h2><a href={`/papershelf/${paper.slug}`}>{paper.title}</a></h2>
            <p class="meta">{paper.date}</p>
            <a href={`/papershelf/${paper.slug}`} class="btn">Read More &rarr;</a>
          </div>
        ))}
      </div>
    ) : (
      <p><em>{emptyMessage}</em></p>
    )}
  </section>
</Layout>
