---
import Layout from '../layouts/Layout.astro';
import experienceData from '../data/experience.json';
import site from '../data/site.json';

const reversedJobs = [...experienceData.jobs].reverse();
const { title, description } = site.pages.experience;
---

<Layout title={title} description={description}>
  <section class="section">
    <h1>{title}</h1>
    <p>{description}</p>
    {reversedJobs.map((job) => (
      <div class="card">
        <h3>{job.title}</h3>
        <p class="meta">{job.meta}</p>
        <ul>
          {job.description.map((desc) => (
            <li>{desc}</li>
          ))}
        </ul>
      </div>
    ))}
  </section>
  <section class="section">
    <h2>Education</h2>
    {experienceData.education.map((edu) => (
      <div class="card">
        <h3>{edu.title}</h3>
        <p class="meta">{edu.meta}</p>
      </div>
    ))}
  </section>
</Layout>
