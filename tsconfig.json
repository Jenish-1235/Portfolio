{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "contentlayer/generated": ["./.contentlayer/generated"],
      "@ui/*": ["libs/ui/*"],
      "@hooks/*": ["libs/hooks/*"],
      "@utils/*": ["libs/utils/*"],
      "@config/*": ["libs/config/*"]
    }
  },
  "include": [".contentlayer/generated"]

}
