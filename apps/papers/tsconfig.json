{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "contentlayer/generated": [
        "../../../.contentlayer/generated"
      ],
      "@ui/*": [
        "../../libs/ui/*"
      ],
      "@hooks/*": [
        "../../libs/hooks/*"
      ],
      "@utils/*": [
        "../../libs/utils/*"
      ],
      "@config/*": [
        "../../libs/config/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../.contentlayer/generated"
  ],
  "exclude": [
    "node_modules"
  ]
}
