{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@ui/*": ["../../libs/ui/*"],
      "@hooks/*": ["../../libs/hooks/*"],
      "@utils/*": ["../../libs/utils/*"],
      "@config/*": ["../../libs/config/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
